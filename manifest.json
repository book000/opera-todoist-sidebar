{
   "name": "Todoist sidebar",
   "description": "Opens Todoist in the sidebar.",
   "author": "Tomachi (book000)",
   "version": "1.0.0",
   "manifest_version": 2,
   "icons": {
      "48": "icons/48.png",
      "128": "icons/128.png"
   },
   "sidebar_action": {
      "default_icon": {
         "48": "icons/48.png",
         "128": "icons/128.png"
      },
      "default_panel": "sidebar.html",
      "default_title": "Todoist sidebar"
   },
   "background": {
      "scripts": [
         "background.js"
      ]
   },
   "permissions": [
      "webRequest",
      "webRequestBlocking"
   ]
}